@model IEnumerable<BigSlider>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <a asp-action="Create" class="btn btn-primary">Create</a>

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Image</th>
                            <th scope="col">Title</th>
                            <th scope="col">Description</th>
                            <th scope="col">Link</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 1;
                        }
                        @foreach (var bigslider in Model)
                        {
                            <tr>
                                <th scope="row">@count</th>
                                <th>
                                    <img src="~/img/@bigslider.Image" width="150px" />
                                </th>
                                @{
                                    if (bigslider.Title.Length > 20)
                                    {
                                        <td>@(bigslider.Title.Substring(0, 20) + "...")</td>
                                    }
                                    else
                                    {
                                        <td>@bigslider.Title</td>
                                    }
                                }
                                @if (bigslider.Description.Length > 20)
                                {
                                    <td>@(bigslider.Description.Substring(0, 20) + "...") </td>
                                }
                                else
                                {
                                    <td> @bigslider.Description </td>
                                }

                                <td>@bigslider.Link</td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@bigslider.Id" class="btn btn-success"><i class="fas fa-eye"></i></a>
                                    <a asp-action="Update" asp-route-id="@bigslider.Id" class="btn btn-warning"> <i class="far fa-edit"></i></a>
                                    <a asp-action="Delete" asp-route-id="@bigslider.Id" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
                                </td>
                            </tr>
                            count++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>