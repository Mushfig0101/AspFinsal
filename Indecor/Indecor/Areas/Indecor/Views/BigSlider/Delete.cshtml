@model BigSlider

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h2>Detail</h2>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h3>Title: @Model.Title</h3>
            <p>Description: @Model.Description</p>
            <p>  <a>@Model.Link</a> : This is Link which you want! </p>

            <img src="~/img/@Model.Image" width="300px" />
        </div>

        <div class="row">
            <div class="col-12">
                <form method="post">
                    <input  type="submit" class="btn btn-danger" value="Delete" style="margin-top:40px"/>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <a asp-action="Index"> <i class="fas fa-arrow-left"></i> Go Back </a>
            </div>
        </div>
    </div>
</div>

