@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}

<h2 style="text-align:center">Product Table</h2>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Basic Datatable</h5>
        <div class="form-group">
            <a asp-action="Create" class="btn btn-primary">Create</a>
        </div>
        <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Control</th>
                        <th>Name</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Count</th>
                        <th>Image</th>
                        <th>Discount</th>
                        <th>Dedline</th>
                        <th>New</th>
                        <th>Most View</th>
                        <th>Seller Count</th>
                        
                    </tr>
                </thead>
                <tbody>

                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-success mb-2"  style="width:40px"><i class="fas fa-eye"></i></a>
                                <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning mb-2" style="width:40px"> <i class="far fa-edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger" style="width:40px"><i class="far fa-trash-alt"></i></a>
                            </td>
                            <td>@product.Name</td>
                            <td>@product.Title</td>
                            <td>@(product.Description.Substring(0, 10) + "...")</td>
                            <td>@product.Price</td>
                            <td>@product.Count</td>
                            <td><img src="~/img/@product.Image" style="width:30px" /></td>
                            <td>@product.DiscountProduct</td>
                            <td>@product.ProductDedline</td>
                            <td>@product.NewProduct</td>
                            <td>@product.MostView</td>
                            <td>@product.SellerCount</td>
                           

                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Control</th>
                        <th>Name</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Count</th>
                        <th>Image</th>
                        <th>Discount</th>
                        <th>Dedline</th>
                        <th>New</th>
                        <th>Most View</th>
                        <th>Seller Count</th>
                       
                    </tr>
                </tfoot>
            </table>
        </div>

    </div>
</div>

@section datatable{
    <script src="~/admin/assets/extra-libs/multicheck/datatable-checkbox-init.js"></script>
    <script src="~/admin/assets/extra-libs/multicheck/jquery.multicheck.js"></script>
    <script src="~/admin/assets/extra-libs/DataTables/datatables.min.js"></script>
    <script>
        /****************************************
         *       Basic Table                   *
         ****************************************/
        $('#zero_config').DataTable();
    </script>
}
