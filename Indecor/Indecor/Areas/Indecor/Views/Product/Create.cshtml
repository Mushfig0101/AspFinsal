                            <option value="Galaxy EDGE S7">Samsung</option>

                        </select>

                    </ul>
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>*@




                <input type="submit" class="btn btn-primary" value="Create" />
            </form>
        </div>
    </div>
</div>

